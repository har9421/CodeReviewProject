{
  "rules": [
    {
      "id": "method-name-length",
      "severity": "warning",
      "message": "Method name should not exceed 30 characters",
      "languages": ["csharp"],
      "pattern": "method.*name.*length"
    },
    {
      "id": "component-name-length",
      "severity": "error",
      "message": "Component name should not exceed 25 characters",
      "languages": ["typescript", "javascript"],
      "pattern": "component.*name.*length"
    },
    {
      "id": "function-name-length",
      "severity": "warning",
      "message": "Function name should not exceed 25 characters",
      "languages": ["javascript", "typescript"],
      "pattern": "function.*name.*length"
    },
    {
      "id": "unused-variable",
      "severity": "warning",
      "message": "Unused variable detected",
      "languages": ["csharp", "javascript", "typescript"],
      "pattern": "unused.*variable"
    },
    {
      "id": "long-class-name",
      "severity": "error",
      "message": "Class name should not exceed 20 characters",
      "languages": ["csharp"],
      "pattern": "class.*name.*length"
    }
  ]
}
